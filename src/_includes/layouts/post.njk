---
layout: layouts/base.njk
---

<article class="post-single">
  <header class="post-header">
    <h1 class="post-title">{{ title }}</h1>
    
    <div class="post-meta">
      <time datetime="{{ date | htmlDateString }}">
        {{ date | readableDate }}
      </time>
    </div>
  </header>

  {% if image %}
  <div class="post-image">
    <img src="{{ image }}" alt="{{ title }}">
  </div>
  {% endif %}

  <div class="post-content">
    {{ content | safe }}
  </div>
</article>